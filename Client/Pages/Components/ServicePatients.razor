<div class="jumbotron1 col-9">
   <div class="container"></div>
   <div class="row mb-3">
      @foreach (var patient in Patients)
      {
         <div class="col-md-4">
            <div class="card flex-md-row mb-4 box-shadow h-md-300">
               <div class="card-body d-flex flex-column align-items-start bg-h2m">
                  <div class="card">
                     <img src="@patient.PatientPhoto" class="img-thumbnail card-img-top">
                     <div class="card-body">
                        <h6 class="card-title">@patient.PatientName</h6>
                        <p class="text-muted">

                           @if (@patient.PatientDocumentType == 1)
                           {
                              RTypeDoct = "Cédula Ciudadanía";
                           }
                           else if (@patient.PatientDocumentType == 2)
                           {
                              RTypeDoct = "Cédula Extranjería";
                           }
                           else
                           {
                              RTypeDoct = "Pasaporte";
                           }
                           @RTypeDoct
                           <small>@patient.PatientDocument</small>
                           <br>
                           @if (@patient.PatientDiagnosis == 1)
                           {
                              RDiagnosis = "Enfermedad 1";
                           }
                           else if (@patient.PatientDiagnosis == 2)
                           {
                              RDiagnosis = "Enfermedad 2";
                           }
                           else if (@patient.PatientDiagnosis == 3)
                           {
                              RDiagnosis = "Enfermedad 3";
                           }
                           else
                           {
                              RDiagnosis = "Enfermedad 4";
                           }
                           @RDiagnosis
                           <br>

                           @if (@patient.PatientDoctor == 1)
                           {
                              RDoc = "Médico 1";
                           }
                           else if (@patient.PatientDoctor == 2)
                           {
                              RDoc = "Médico 2";
                           }
                           else if (@patient.PatientDoctor == 3)
                           {
                              RDoc = "Médico 3";
                           }
                           else
                           {
                              RDoc = "Médico 4";
                           }
                           @RDoc
                           <br>
                           @patient.PatientEPS
                           <br>
                           @patient.Id
                        </p>
                     </div>
                  </div>
 @*                 <div>
                     <button @onclick="PatientEdit">Editar</button>
                  </div>  *@
               </div>
            </div>
         </div>
      }
   </div>
</div>


@code {

   string RTypeDoct, RDiagnosis, RDoc;

   [Parameter] public List<Patient> Patients { get; set; }
   [Parameter] public int Id { get; set; }
   [Parameter] public string Name { get; set; }

   void PatientEdit()
   {
      Console.WriteLine($"Editando info Paciente ");
   }

}