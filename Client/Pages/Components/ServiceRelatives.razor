<div class="jumbotron1 col-9">
   <div class="container"></div>
   <div class="row mb-3">
      @foreach (var relative in Relatives)
      {
         <div class="col-md-4">
            <div class="card flex-md-row mb-4 box-shadow h-md-300">
               <div class="card-body d-flex flex-column align-items-start bg-h2m">
                  <div class="card">
                     <img src="@relative.RelativePhoto" class="img-thumbnail card-img-top">
                     <div class="card-body">
                        <h6 class="card-title">@relative.RelativeName</h6>
                        <p class="text-muted">

                           @if (@relative.RelativeDocumentType == 1)
                           {
                              RTypeDoct = "Cédula Ciudadanía";
                           }
                           else if (@relative.RelativeDocumentType == 2)
                           {
                              RTypeDoct = "Cédula Extranjería";
                           }
                           else
                           {
                              RTypeDoct = "Pasaporte";
                           }
                           @RTypeDoct
                           <small>@relative.RelativeDocument</small>
                           <br>
                           @relative.RelativeEmail
                           <br>
                           @if (@relative.RelativeRelationship == 1)
                           {
                              RRelation = "La relación con el paciente es de tipo 1";
                           }
                           else if (@relative.RelativeRelationship == 2)
                           {
                              RRelation= "La relación con el paciente es de tipo 2";
                           }
                           else if (@relative.RelativeRelationship == 3)
                           {
                              RRelation = "La relación con el paciente es de tipo 3";
                           }
                            else if (@relative.RelativeRelationship == 4)
                           {
                              RRelation = "La relación con el paciente es de tipo 4";
                           }
                           else if (@relative.RelativeRelationship == 5)
                           {
                              RRelation = "La relación con el paciente es de tipo 5";
                           }
                           else if (@relative.RelativeRelationship == 6)
                           {
                              RRelation = "La relación con el paciente es de tipo 6";
                           }
                           else if (@relative.RelativeRelationship == 7)
                           {
                              RRelation = "La relación con el paciente es de tipo 7";
                           }
                           else
                           {
                              RRelation = "La relación con el paciente es de tipo 8";
                           }
                           @RRelation
                           <br>
                           @relative.Id
                        </p>
                     </div>
                  </div>
 @*                 <div>
                     <button @onclick="RelativeEdit">Editar</button>
                  </div>  *@
               </div>
            </div>
         </div>
      }
   </div>
</div>


@code {

   string RTypeDoct, RRelation;

   [Parameter] public List<Relative> Relatives { get; set; }
   [Parameter] public int Id { get; set; }
   [Parameter] public string Name { get; set; }

   void RelativeEdit()
   {
      Console.WriteLine($"Editando info Familiar del Paciente ");
   }

}