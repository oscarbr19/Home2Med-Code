<div class="jumbotron1 col-9">
   <div class="container"></div>
   <div class="row mb-3">
      @foreach (var doctor in Doctors)
      {
         <div class="col-md-4">
            <div class="card flex-md-row mb-4 box-shadow h-md-300">
               <div class="card-body d-flex flex-column align-items-start bg-h2m">
                  <div class="card">
                     <img src="@doctor.Photo" class="img-thumbnail card-img-top">
                     <div class="card-body">
                        <h6 class="card-title">@doctor.Name</h6>
                        <p class="text-muted">

                           @if (@doctor.DocumentType == 1)
                           {
                              RTypeDoct = "Cédula Ciudadanía";
                           }
                           else if (@doctor.DocumentType == 2)
                           {
                              RTypeDoct = "Cédula Extranjería";
                           }
                           else
                           {
                              RTypeDoct = "Pasaporte";
                           }
                           @RTypeDoct
                           <small>@doctor.Document</small>
                           <br>

                           @if (@doctor.Speciality == 1)
                           {
                              RSpeciality = "Especialidad Médica 1";
                           }
                           else if (@doctor.Speciality == 2)
                           {
                              RSpeciality = "Especialidad Médica 2";
                           }
                           else if (@doctor.Speciality == 3)
                           {
                              RSpeciality = "Especialidad Médica 3";
                           }
                           else
                           {
                              RSpeciality = "Especialidad Médica 4";
                           }
                           @RSpeciality
                           <br>
                           @doctor.Id
                        </p>
                     </div>
                  </div>
                  @*<div>
                     <button @onclick="DoctorEdit">Editar</button>
                  </div>*@
               </div>
            </div>
         </div>
      } 
   </div>
</div>


@code {

   string RTypeDoct, RSpeciality;

   [Parameter] public List<Doctor> Doctors { get; set; }
   [Parameter] public int Id { get; set; }
   [Parameter] public string Name { get; set; }

   public Doctor doctor;

   void DoctorEdit()
   {
      Console.WriteLine($"Editando info Medico {Id} ");
   }

}